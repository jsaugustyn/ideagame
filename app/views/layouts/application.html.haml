!!!
%html
%head
	%title Idea Game
	= stylesheet_link_tag    'application', media: 'all'
	= javascript_include_tag 'application'
	%link{:rel => "stylesheet", :href => "http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.min.css" }
	%link{:rel => "stylesheet", :href => "http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" }
	= csrf_meta_tags
%body

	%nav.navbar.navbar-fixed-top
		%div.container-fluid
			%div.navbar-header
				#a.navbar-brand= link_to "Idea Game", root_path
			%div
				%ul.nav.navbar-nav.navbar-right
					- if user_signed_in?
						%li= link_to current_user.name, edit_user_registration_path
					- else
						%li= link_to "Sign In", new_user_session_path
						%li= link_to "Sign Up", new_user_registration_path, class: "btn btn-default"

	%p.notice= notice
	%p.alert= alert

	.wrapper
		= yield