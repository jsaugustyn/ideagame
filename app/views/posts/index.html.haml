%div.jumbotron
	- if user_signed_in?
		%h1 
			Hello 
			= current_user.name
		%p Share your idea about the future and explore how others see the world in 2045 
		%a= link_to "Add Idea", new_post_path, class: "btn btn-default"

-#- else
-#	%p#intro
-#		What's your muse?
-#		%br/
-#		%span
-#			Share your inspiration and see what's inspiring others.

%div.container
	#posts
		- @posts.each do |post|
			.post
				.post_image
					= link_to (image_tag post.image.url(:small))
				.post_content
					.title
						%h2= link_to post.title, post
						%p 
							Trends:
							- post.trends.each do |trend|
								= trend.title
								|
								-#.trend= simple_format(trend.title)

					.data.clearfix
						%p.username
							Envisioned by
							= post.user.name
						%p.buttons
							%span
								%l.fa.fa-comments-o
								=post.comments.count
							%span
								%l.fa.fa-thumbs-o-up
								=post.get_likes.size
